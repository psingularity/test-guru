<h1>Создание нового теста</h1>

<form action="/tests" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  
  <p>
    <label for="test-title">Название:</label>
    <input type="text" name="test[title]" id="test-title">
  </p><br>

   <p>
    <label for="test-level">Уровень:</label>
    <input type="text" name="test[level]" id="test-level">
  </p><br>

   <p>
    <label for="test-category">Категория:</label>
    <input type="text" name="test[category_id]" id="test-category">
  </p><br>

  <p>
    <label for="test-author">Автор:</label>
    <input type="text" name="test[author_id]" id="test-author">
  </p><br>

  <input type="submit" value="Create">
</form>