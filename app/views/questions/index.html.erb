<h1>Список вопросов теста</h1>

<table>
  <thead>
    <tr>
      <th>№</th>
      <th>Вопрос</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each.with_index(1) do |question, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= question.body %></td>
         <td><%= link_to "Подробнее", question %></td>
         <td>           
           <%= link_to "Удалить", question, :data => {:confirm => "Вы уверены?"}, :method => :delete %>
         </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Создать новый вопрос", new_test_question_path %>
