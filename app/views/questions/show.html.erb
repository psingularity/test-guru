<h1><%= @question.body %></h1>

<ul>
  <li>Id: <%=@question.id %></li>
  <li>Test_id: <%=@question.test_id %></li>  
</ul>

<h2>Ответы:</h2>
<%= link_to 'Добавить ответ', new_question_answer_path(@question) %>
<ol>
  <%= render @question.answers %>
</ol>

<p><%= link_to 'Редактировать', edit_question_path(@question) %> </p>
<p><%= link_to 'Вернуться', test_path(@question.test) %></p>
